@switch (Result)
{
    case null:
        <Spinner />
        break;

    case true:
        @ChildContent
        break;

    default:
        <Error500 />
        break;
}

@code
{
    [Parameter] public bool? Result { get; set; }
    [Parameter] public RenderFragment ChildContent  { get; set; } = null!;
}